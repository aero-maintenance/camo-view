<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.camo.customer.CustomerEditDialogController">
   <children>
      <BorderPane prefHeight="500.0" prefWidth="350.0">
         <center>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="169.0" minWidth="10.0" prefWidth="104.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="254.0" minWidth="10.0" prefWidth="236.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Nom" />
                  <Label text="Adresse" GridPane.rowIndex="1" />
                  <Label text="Ville" GridPane.rowIndex="2" />
                  <Label text="CP" GridPane.rowIndex="3" />
                  <Label text="Email" GridPane.rowIndex="4" />
                  <Label text="Téléphone" GridPane.rowIndex="5" />
                  <Label text="Mot de passe" GridPane.rowIndex="6" />
                  <TextField fx:id="nomField" GridPane.columnIndex="1" />
                  <TextField fx:id="adresseField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="villeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="telField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button mnemonicParsing="false" onAction="#handleOk" text="Ok" />
                  <Button mnemonicParsing="false" onAction="#handleCancel" text="Annuler" />
              </buttons>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
